<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.inventory"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true" >
        <activity android:name="com.example.inventory.activity.ItemDetailActivity" />
        <activity android:name="com.example.inventory.activity.FilterInventoryActivity" />
        <activity android:name="com.example.inventory.activity.BagInventoryActivity" />
        <activity
            android:name="com.example.inventory.activity.AddBagActivity"
            android:label="ADD BAG"
            android:parentActivityName="com.example.inventory.activity.MainActivity"
            android:theme="@style/Theme.Inventory" />
        <activity
            android:name="com.example.inventory.activity.RegisterActivity"
            android:theme="@style/Theme.Login" />
        <activity
            android:name="com.example.inventory.activity.ProfileActivity"
            android:parentActivityName="com.example.inventory.activity.MainActivity"
            android:theme="@style/Theme.Inventory" />
        <activity
            android:name="com.example.inventory.activity.MainActivity"
            android:label="BAGS"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Inventory" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.inventory.activity.LoginActivity"
            android:theme="@style/Theme.Login" >
        </activity>

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.example.inventory.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>